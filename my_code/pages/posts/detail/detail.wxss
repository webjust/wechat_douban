/* pages/posts/detail/detail.wxss */

.content {
  padding: 20rpx;
  font-family: MicroSoft Yahei;
  font-size: 12px;
  display: flex;
  flex-direction: column;
}

.book_title {
  font-size: 24px;
  line-height: 48px;
}

.book_head {
  display: flex;
  flex-direction: row;
  color: #333;
}

.book_des {
 line-height: 18px;
}

.lar_img {
}

.lar_img image {
  width: 200rpx;
  height: 295rpx;
}

.book_info {
  padding: 0 10px;
}

.book_info text {
  display: block;
  padding-bottom: 8px;
}

.book_content {
  display: flex;
  flex-direction: column;
  color: #666;
}

.book_content .tit {
  font-size: 16px;
  line-height: 32px;
  color: green;
}

.book_author {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
  color: #666;
}

.book_author .tit {
  font-size: 16px;
  line-height: 32px;
  color: green;
}

/*分享*/
.share{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 30px 0;
}

.share image{
    width: 60rpx;
    height: 60rpx;
}

.share text{
    color: #666;
    line-height: 32px;
}